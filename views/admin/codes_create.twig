{% extends './layout.twig' %}

{% block body %}
    <div class="row">
        <div class="col">
            <h2>Create Codes</h2>
        </div>
    </div>
    <div class="row">

        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    Create Codes
                </div>
                <div class="card-body">
                    <form method="post" action="/admin/codes/create">

                        <div class="form-group">
                            <label for="prefix">Prefix (optional)</label>
                            <input type="text" class="form-control" name="prefix">
                            <aside class="text-muted">Add a prefix to all newly generated codes.</aside>
                        </div>

                        <div class="form-group">
                            <label for="amount">Amount</label>
                            <input required type="number" min="0" max="1000" class="form-control" name="amount">
                            <aside class="text-muted">How many codes should be created?</aside>
                        </div>


                        <div class="form-group">
                            <input type="submit" class="btn btn-primary" value="Create!">
                        </div>

                    </form>
                </div>
            </div>
        </div>

    </div>
{% endblock %}